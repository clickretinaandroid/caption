<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.watools.statusforwhatsapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/caption_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/caption_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.watools.statusforwhatsapp.activity.CaptionView"
            android:screenOrientation="portrait"
            android:parentActivityName="com.watools.statusforwhatsapp.activity.HomePage"/>


        <activity android:name="com.watools.statusforwhatsapp.activity.HomePage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>
    </application>

</manifest>